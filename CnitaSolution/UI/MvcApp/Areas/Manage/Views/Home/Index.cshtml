@{
    ViewBag.Title = "后台管理-首页";
    Layout = "~/Areas/Manage/Views/Shared/_manage.cshtml";
}

<div class="container-fluid">
    <!-- BEGIN PAGE HEADER-->
    <div class="row-fluid">
        <div class="span12">
            <!-- BEGIN PAGE TITLE & BREADCRUMB-->
            <h3 class="page-title">
                <!--Jason.Yao <small>后台管理系统</small>-->
            </h3>
            <ul class="breadcrumb">
                <li><i class="icon-home"></i><a href="index.html">后台管理</a>                <i class="icon-angle-right"></i></li>
                <li><a href="@Url.Action("Index", "Home")">首页</a></li>
                <li class="pull-right no-text-shadow">
                    <div id="dashboard-report-range"
                        class="dashboard-date-range tooltips no-tooltip-on-touch-device responsive" data-tablet=""
                        data-desktop="tooltips" data-placement="top" data-original-title="Change dashboard date range">
                        <i class="icon-calendar"></i><span></span><i class="icon-angle-down"></i>
                    </div>
                </li>
            </ul>
            <!-- END PAGE TITLE & BREADCRUMB-->
        </div>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTAINER-->
    <div id="dashboard">
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-cogs"></i>Start Menu</div>
                        <div class="tools">
                            <a href="" class="collapse"></a><a href="" class="remove"></a>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="row-fluid">
                            <!--磁贴 开始-->
                            <div class="tiles" style="text-align: center;" onclick="MagnetGoto('@Url.Action("Index", "Category")')" >
                                <div class="tile bg-blue">
                                    <div class="tile-body">
                                        <i class="icon-picture"></i>
                                    </div>
                                    <div class="tile-object">
                                        <div class="name">
                                            分类管理 
                                        </div>
                                        <div class="number">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tile bg-purple" onclick="window.location = '@Url.Action("Index", "Article")'" >
                                <div class="tile-body">
                                    <i class="icon-file"></i>
                                </div>

                                <div class="tile-object">
                                    <div class="name">
                                        文章管理 
                                    </div>
                                    <div class="number">
                                    </div>
                                </div>
                            </div>
                            <div class="tile bg-red" onclick="MagnetGoto('@Url.Action("Index", "Org")')">
                                <div class="tile-body">
                                    <i class="icon-user"></i>
                                </div>
                                <div class="tile-object">
                                    <div class="name">
                                       会员管理 
                                    </div>
                                    <div class="number">
                                    </div>
                                </div>
                            </div>
                            <div class="tile bg-green" onclick="MagnetGoto('@Url.Action("Index", "Acc")')">
                                <div class="tile-body">
                                    <i class="icon-key"></i>
                                </div>
                                <div class="tile-object">
                                    <div class="name">
                                        账号管理 
                                    </div>
                                    <div class="number">
                                    </div>
                                </div>
                            </div>
                            <div class="tile bg-yellow" onclick="MagnetGoto('@Url.Action("Index", "Ads")')">
                                <div class="corner"></div>
                                <div class="check"></div>
                                <div class="tile-body">
                                    <i class="icon-volume-up"></i>
                                </div>
                                <div class="tile-object">
                                    <div class="name">
                                        广告管理 
                                    </div>
                                    <div class="number">
                                    </div>
                                </div>
                            </div>
                            @*<div class="tile bg-lb">
                                <div class="tile-body">
                                    <i class="icon-link"></i>
                                </div>
                                <div class="tile-object">
                                    <div class="name">
                                        友情链接管理 
                                    </div>
                                    <div class="number">
                                    </div>
                                </div>
                            </div>*@

                            <div class="tile bg-grey">
                                <div class="tile-body">
                                    <i class="icon-cogs"></i>
                                </div>
                                <div class="tile-object">
                                    <div class="name">
                                        网站设置 
                                    </div>
                                    <div class="number">
                                    </div>
                                </div>
                            </div>

                            <!--磁贴 结束-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box red">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-cogs"></i>Server Stats</div>
                        <div class="tools">
                            <a href="" class="collapse"></a><a href="" class="remove"></a>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="row-fluid">
                            <div class="portlet-body form">
                                <table class="table table-hover table-striped table-bordered">
                                    <tbody>
                                        <tr>
                                            <td class="span6">服务器名称</td>
                                            <td class="span6">@Server.MachineName</td>
                                        </tr>
                                        <tr>
                                            <td class="span6">CPU个数</td>
                                            <td class="span6">@Environment.GetEnvironmentVariable("NUMBER_OF_PROCESSORS")</td>
                                        </tr>
                                        <tr>
                                            <td class="span6">服务器操作系统版本</td>
                                            <td class="span6">@Environment.OSVersion.ToString()</td>
                                        </tr>
                                        <tr>
                                            <td class="span6">.NET版本</td>
                                            <td class="span6">.NET CLR @Environment.Version.Major.@Environment.Version.Minor</td>
                                        </tr>
                                        <tr>
                                            <td class="span6">服务器IIS版本</td>
                                            <td class="span6">@Request.ServerVariables["SERVER_SOFTWARE"]</td>
                                        </tr>
                                        <tr>
                                            <td class="span6">HTTP访问端口</td>
                                            <td class="span6">@Request.ServerVariables["SERVER_PORT"]</td>
                                        </tr>
                                        <tr>
                                            <td class="span6">服务器域名</td>
                                            <td class="span6">@Request.ServerVariables["SERVER_NAME"]</td>
                                        </tr>
                                        <tr>
                                            <td class="span6">服务器区域语言</td>
                                            <td class="span6">@Request.ServerVariables["HTTP_ACCEPT_LANGUAGE"]</td>
                                        </tr>
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
        function MagnetGoto(url) {
            window.location = url;
        }
    </script>
}