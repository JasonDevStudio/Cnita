@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    @RenderSection("Styles", required: false)
}

<div class="banner">
    @if (IsSectionDefined("Banner"))
    {
        @RenderSection("Banner", false)
    }
    else
    {
        <div>
            <iframe src="@Url.Action("Banner", "Home", new { categoryCode = "31", ownerCode = "", width = "1098" })", width="1100px"  height="100px" frameborder="0" scrolling="no"></iframe>
        </div>
    }
</div>
<div class="subcontent">
    @*版块导航 开始*@
    <div class="subcontent_nav">
        @if (IsSectionDefined("SubContentNav"))
        {
            @RenderSection("SubContentNav", false)
        }
        else
        {
            <p>资讯</p>
        }
    </div>
    @*版块导航 结束*@
    <div class="subcontent_container">
        @*侧边栏 开始*@
        <div class="subcontent_sidebar">
            @RenderSection("SidebarTop", false)
            @if (IsSectionDefined("Sidebar"))
            {
                @RenderSection("Sidebar", false)
            }
            else
            {
                @Html.Action("SidebarForum", "Home", new { categoryCode = "6", adsCategoryCode = "33" })
                @Html.Action("SidebarForum", "Home", new { categoryCode = "36", adsCategoryCode = "33", categoryTwoCode = "36" })
            }
            @if (IsSectionDefined("SidebarBottom"))
            {
                @RenderSection("SidebarBottom", false)
            }
            else
            {
                <div class="sidebar_forum_top">
                    <p class="sidebar_forum_top_p"><a href="#">《技术纺织品》杂志</a> | <a href="@Url.Action("Detail", "Article")\13">手机报</a></p>
                </div>
                <div class="sidebar_forum_middle_top">
                    <br />
                </div>
                <div class="sidebar_forum_middle_middle">
                    <table>
                        <tr>
                            <td>
                                <img src="@Url.Content("~/Images/zazhi.gif")" />
                            </td>
                            <td>
                                <p><a href="@Url.Action("Detail", "Article", new { id=14})" target="_blank">订阅</a></p>
                                <p><a href="@Url.Action("Detail", "Article", new { id=15})" target="_blank">广告服务</a></p>
                                <p><a href="@Url.Action("Detail", "Article", new { id=16})" target="_blank">征稿启事</a></p>
                                <p><a href="@Url.Action("Details", "Article",new { id=17})" target="_blank">期刊理事会</a></p>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2"></td>
                        </tr>
                    </table>
                </div>
                <div class="sidebar_forum_middle_bottom">
                    <br />
                </div>
                <div class="sidebar_forum_bottom">
                </div> 
            }
        </div>
        @*侧边栏 结束*@
        @*内容 开始*@
        <div class="subcontent_content">
            <div class="subcontent_content subcontainer">
                <div class="subcontainer_top">
                </div>
                <div class="subcontainer_middle">
                    @RenderBody()
                </div>
                <div class="subcontainer_bottom">
                </div>
            </div>

        </div>
        @*内容 结束*@
    </div>
</div>
@section Scripts{
    @RenderSection("Scripts", required: false)
}