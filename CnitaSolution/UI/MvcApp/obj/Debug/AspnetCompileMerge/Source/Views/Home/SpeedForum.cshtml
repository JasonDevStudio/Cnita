        </div>
    </div>
    <marquee id="a" onmouseover="a.stop()" onmouseout="a.start()" scrollamount="2" direction="up">
    @if (Model != null && Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <div class="speedlist">
        <div class="speedlist_left">
            <p><a href="@Url.Action("Detail", "Article", new { Id = item.Id }) " title="@item.Title"><i class="i_icon"><img src="@Url.Content("~/Content/themes/Default/images/circle_blue.jpg")" alt="" /></i>@Library.Common.CommonMethod.ObjSubstringByLength(item.Title, 11)</a> </p>
        </div>
        <div class="speedlist_right" >
            <p style="margin-left:0px;"><a href="javascript:void(0);">@item.Keyword</a></p>
        </div>
    </div>
                
        }
    }
</marquee>


