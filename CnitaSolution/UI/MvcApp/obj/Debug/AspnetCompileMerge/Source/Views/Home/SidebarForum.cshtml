@model IEnumerable<Library.Models.ModelArticle>

<div class="sidebar_forum_top">
    <div class="sidebar_forum_top_left">
        <p>@ViewBag.CategName</p>
    </div>
    <div class="sidebar_forum_top_right">
        <p><a href="@Url.Action("Index", "Article", new { Id=ViewBag.CategoryCode}) ">more</a></p>
    </div>
</div>

    @if (!string.IsNullOrWhiteSpace(Convert.ToString(ViewBag.Thumbnails)))
    { 
        <div class="sidebar_forum_middle_top">
        <div>
            <a href="#"><img src="@Url.Content("~/Uploads/Images/" + ViewBag.Thumbnails)"></a>  
        </div>
        </div>
    } 

<div class="sidebar_forum_middle_middle">
    <ul>
    @if (Model != null && Model.Count() > 0)
    {
        foreach (var item in Model)
        {
        <li><a href="@Url.Action("Detail", "Article", new { Id=item.Id}) " title="@item.Title"><i class="i_icon"><img src="@Url.Content("~/Content/themes/Default/images/circle_blue.jpg")" alt="" /></i>@Library.Common.CommonMethod.ObjSubstringByLength(item.Title, 28) (@item.Createdate.ToString("MM-dd"))</a> </li>
        }
    }
        </ul>
</div>
<div class="sidebar_forum_middle_bottom">
    @if (Convert.ToInt32(ViewBag.CategIsAds) > 0)
    { 
        <div>
            <iframe src="@Url.Action("Banner", "Home", new { categoryCode = ViewBag.AdsCategoryCode, ownerCode = ViewBag.CategoryCode, width = "260", height = "80",isSlide=ViewBag.IsSlide})", width="260px"  height="80px" frameborder="0" scrolling="no"></iframe>
        </div>  
    } 
</div>
<div class="sidebar_forum_bottom">
</div> 