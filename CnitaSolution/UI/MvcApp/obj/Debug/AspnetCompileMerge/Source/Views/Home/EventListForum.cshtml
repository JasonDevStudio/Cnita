                {
                <p><a href="@Url.Action("Detail", "Article", new { Id = item.Id }) " title="@item.Title">·@Library.Common.CommonMethod.ObjSubstringByLength(item.Title, 20)</a> </p>
                }
            }
        </div>
    </div>*@
