@model IEnumerable<Library.Models.ModelCategory>


<div class="sidebar_forum_top">
    <div class="sidebar_forum_top_left">
        <p>@ViewBag.CategName</p>
    </div>
    <div class="sidebar_forum_top_right">
       @* <p><a href="@Url.Action("AssocList", "Article", new { categoryCode = ViewBag.CategoryCode })">more</a></p>*@
    </div>
</div>
<div class="sidebar_forum_middle_top">
    @if (!string.IsNullOrWhiteSpace(Convert.ToString(ViewBag.Thumbnails)))
    { 
        <div>
            <a href="#">
                <img src="@Url.Content("~/Uploads/Images/" + ViewBag.Thumbnails)"></a>
        </div>
        
    }
    else
    {
        <br />
    }
</div>
<div class="sidebar_forum_middle_middle">
    @if (Model != null && Model.Count() > 0)
    {
        foreach (var item in Model)
        {
        <p><a href="@(string.IsNullOrWhiteSpace(item.Nameen) ? "#" : Url.Content(item.Nameen))" title="@item.Name"><i class="i_icon"><img src="@Url.Content("~/Content/themes/Default/images/circle_blue.jpg")" alt="" /></i>@Library.Common.CommonMethod.ObjSubstringByLength(item.Name, 12)</a> </p>
        }
    }
</div>
<div class="sidebar_forum_middle_bottom">
    @if (Convert.ToInt32(ViewBag.CategIsAds) > 0)
    { 
        <div>
            <iframe src="@Url.Action("Banner", "Home", new { categoryCode = ViewBag.AdsCategoryCode, ownerCode = ViewBag.CategoryCode, width = "260", height = "80" })", width="260px"  height="80px" frameborder="0" scrolling="no"></iframe>
        </div>  
    }
    else
    { 
        <br />
    }
</div>
<div class="sidebar_forum_bottom">
</div>
